<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewPlace"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="8dp"
        app:cardElevation="12dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/placeImage"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/placeNameInDesign"
                android:text="Name"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/placeImage"
                />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_toRightOf="@id/placeImage"
                android:layout_below="@+id/placeNameInDesign"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:progressTint="#fff000"
                android:progressBackgroundTint="#ff00"
                android:rating="2.5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalRating"
                android:text="(1)"
                android:layout_toRightOf="@id/ratingBar"
                android:layout_below="@id/placeNameInDesign"

                android:layout_marginLeft="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vicinity"
                android:text="Kohat"
                android:layout_toRightOf="@id/placeImage"
                android:layout_below="@id/ratingBar"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>